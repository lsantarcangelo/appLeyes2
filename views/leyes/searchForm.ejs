<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('../partials/head', {title: 'Búsqueda'}) %>
	<body>
		<div class="container-fluid background-wrapper">
			<!-- header -->
			<%- include('../partials/headerNavbar') %>
			<!-- /header -->
			<div class="row">
				<div class="container search-group col-lg-6 col-md-8">
					<h2 class="tittle-wrapper">Búsqueda de Leyes</h2>
					<div class="container form-wrapper">
						<div class="row">
							<div class="col-12">
								<form id="searchForm" action="/leyes/search/result" method="GET">
									<div class="row">
										<div class="form-group col-12">
											<label for="type" class="form-label">Tipo de Norma:</label>
											<select name="type" id="type" class="form-control">
												<option value="">Seleccione el tipo</option>
												<% for( let i = 0; i < types.length; i++ ) { %>
													<option value="<%= types[i].id %>"><%= types[i].name %></option>
												<% } %> 
											</select>            
										</div>
										<div class="form-group col-12">
											<label for="number" class="form-label">Número:</label>
											<input type="text" id="number" name="number" class="form-control">              
										</div>
										<div class="form-group col-12">
											<label for="year" class="form-label">Año:</label>
											<input type="text" id="year" name="year" class="form-control">              
										</div>
										<div class="form-group col-12">
											<label for="status" class="form-label">Estado:</label>
											<input type="text" id="status" name="status" class="form-control">              
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
					<div class="button-group">
						<button type="submit" form="searchForm" class="btn btn-info btn-sm edit-button">Enviar</button>
						<button type="reset" form="searchForm" class="btn btn-info btn-sm edit-button">Limpiar</button>
					</div>
				</div>
			</div>
		</div>
		<!-- footer -->
		<%- include('../partials/footer') %>
		<!-- /footer -->
  </body>
</html>
