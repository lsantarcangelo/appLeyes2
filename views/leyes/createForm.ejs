<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('../partials/head', {title: 'Crear'}) %>
<body>
    <div class="container-fluid background-wrapper">
    <!-- header -->
    <%- include('../partials/headerNavbar') %>
    <!-- /header -->
        <div class="container search-group col-lg-6 col-md-8">
            <h2 class="tittle-wrapper">Formulario de Carga de Leyes</h2>
            <div class="container form-wrapper">
                <div class="row">
                    <div class="col-12">
                        <form id="createForm" action="/leyes/create" method="POST" enctype="multipart/form-data">
                            <div class="row leyes-detail">
                                <div class="form-group col-12">
                                    <label for="number" class="form-label">Número:</label>
                                    <input type="text" id="number" name="number" class="form-control">
                                </div>
                                <div class="form-group col-12">
                                    <label for="year" class="form-label">Año:</label>
                                    <input type="text" id="year" name="year" class="form-control">
                                </div>
                                <div class="form-group col-12">
                                    <label for="type" class="form-label">Tipo de Norma:</label>
                                    <select name="type" id="type" class="form-control">
                                        <option value="">Elegir opción</option>
                                        <% for( let index = 0; index < selectType.length; index++ ) { %>
                                            <option value=<%= selectType[index].id %>><%= selectType[index].name %></option>
                                        <% } %>
                                    </select>                        
                                </div>
                                <div class="form-group col-12">
                                    <label for="status" class="form-label">Estado:</label>
                                    <select name="status" id="status" class="form-control">
                                        <option value="">Elegir opción</option>
                                        <option value="vigente">Vigente</option>
                                        <option value="no-vigente">No Vigente</option>
                                    </select>
                                </div>
                                <div class="form-group col-12">
                                    <label for="file" class="form-label">Adjuntar Norma</label>
                                    <input type="file" class="form-control" name="file">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="button-group">
                <button type="submit" form="createForm" class="btn btn-info btn-sm">Guardar</button>
                <button type="reset" form="createForm" class="btn btn-info btn-sm edit-button">Limpiar</button>
            </div>
        </div>
    </div>
    <!-- footer -->
    <%- include('../partials/footer') %>
    <!-- /footer -->
</body>
</html>